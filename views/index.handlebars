    <div class="container">
    <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
    <div class="jumbotron">
    <h1 class="display-4"><i class="fab fa-wordpress"></i>Vocabulary Builder</h1>
    <p class="lead">Build Your Vocabs here!</p>
    <hr class="my-4">
    {{!-- Text area --}}
    <div class="form-group">
    <label for="exampleFormControlTextarea1">Add word and category</label>
    <textarea class="form-control" id="input-word" rows="2"></textarea><br>

<div class="custom-control custom-radio custom-control-inline">
  <label>
      <input type="radio" name="optionsRadios" id="optionsRadios1" value="learning">
      LEARNING 
  </label>
</div>

<div class="custom-control custom-radio custom-control-inline">
  <label>
      <input type="radio" name="optionsRadios" id="optionsRadios2" value="mastered">
      MASTERED 
  </label>
</div>

  </div>

    <button type="button" class="btn btn-primary"id="submit-btn"><i class="fas fa-plus"></i>  Add Word</button>

    </div>
    </div>
    <div class="col-md-2"></div>
    </div>

    {{!-- Table1 --}}
    {{!-- Row --}}
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
    <table class="table table-dark"id="wordTable">
  <thead>
    <tr class="table-warning">
        <td class="table-warning text-dark" colspan="4">LEARNING TABLE</td>
    </tr>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Word</th>
      <th scope="col">Status</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    
    {{#each result}}
    {{#unless MASTERED}}
      {{> vocabs/vocab-block MASTERED=1}}
    {{/unless}}
  {{/each}}
  
  </tbody>
</table>
</div>
<div class="col-md-2"></div>
</div>

{{!-- Table2 --}}
    {{!-- Row --}}
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
    <table class="table table-dark"id="masteredTable">
  <thead>
    <tr class="table-success">
        <td class="table-success text-dark" colspan="4">MASTERED TABLE</td>
    </tr>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Word</th>
      <th scope="col">Status</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    
      {{#each result}}
    {{#if MASTERED}}
      {{> vocabs/vocab-block MASTERED=0}}
    {{/if}}
  {{/each}}
    
  </tbody>
</table>
</div>
